    <script>
        // Create background effects (hearts and confetti)
        function createBackgroundEffects() {
            const container = document.getElementById('background-effects');
            
            // Create hearts
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§Ô∏è';
                heart.classList.add('heart');
                heart.style.left = `${Math.random() * 100}vw`;
                heart.style.animationDelay = `${Math.random() * 5}s`;
                heart.style.fontSize = `${Math.random() * 2 + 1}rem`;
                container.appendChild(heart);
            }
            
            // Create confetti periodically
            setInterval(() => {
                for (let i = 0; i < 15; i++) {
                    createConfetti();
                }
            }, 3000);
        }
        
        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.classList.add('confetti');
            
            // Random color
            const colors = ['#ff6ec4', '#ff8e8e', '#ffd166', '#6a11cb', '#2575fc'];
            confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
            
            // Random size
            const size = Math.random() * 10 + 5;
            confetti.style.width = `${size}px`;
            confetti.style.height = `${size}px`;
            
            // Random position
            confetti.style.left = `${Math.random() * 100}vw`;
            
            // Random animation duration
            const duration = Math.random() * 5 + 3;
            confetti.style.animation = `fall ${duration}s linear forwards`;
            
            document.getElementById('background-effects').appendChild(confetti);
            
            // Remove confetti after animation completes
            setTimeout(() => {
                confetti.remove();
            }, duration * 1000);
        }
        
        // Gift card interactions
        document.getElementById('virtual-hug').addEventListener('click', function() {
            this.innerHTML = '<span class="gift-icon">üíñ</span><h3>Hug Received!</h3><p>Sending you the biggest virtual hug!</p>';
            this.style.background = 'linear-gradient(135deg, #ff6ec4 0%, #ff8e8e 100%)';
            
            // Create hearts animation
            for (let i = 0; i < 10; i++) {
                createHeartAnimation(this);
            }
        });
        
        document.getElementById('personal-message').addEventListener('click', function() {
            this.innerHTML = '<span class="gift-icon">‚ú®</span><h3>To My Sister</h3><p>Thank you for being the amazing person you are. I cherish our bond more than words can say!</p>';
            this.style.background = 'linear-gradient(135deg, #6a11cb 0%, #2575fc 100%)';
        });
        
        document.getElementById('birthday-wish').addEventListener('click', function() {
            this.innerHTML = '<span class="gift-icon">üåü</span><h3>Your Wish</h3><p>May this year be filled with joy, love, and wonderful adventures!</p>';
            this.style.background = 'linear-gradient(135deg, #ffd166 0%, #ff9e00 100%)';
        });
        
        // Surprise button
        document.getElementById('surprise-btn').addEventListener('click', function() {
            // Create confetti explosion
            for (let i = 0; i < 100; i++) {
                createConfetti();
            }
            
            // Show surprise message
            const messages = [
                "You're the best!",
                "Sister for life!",
                "So grateful for you!",
                "Wishing you endless joy!",
                "Cheers to another year!",
                "Love you to the moon!"
            ];
            
            this.textContent = messages[Math.floor(Math.random() * messages.length)];
            
            // Reset button after delay
            setTimeout(() => {
                this.textContent = "Click for Another Surprise!";
            }, 3000);
        });
        
        // Create floating heart animation
        function createHeartAnimation(element) {
            const heart = document.createElement('div');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.position = 'absolute';
            heart.style.fontSize = '2rem';
            heart.style.color = '#ff6ec4';
            heart.style.left = `${element.getBoundingClientRect().left + element.offsetWidth/2}px`;
            heart.style.top = `${element.getBoundingClientRect().top}px`;
            heart.style.opacity = '0';
            heart.style.zIndex = '100';
            heart.style.transition = 'all 1.5s ease-out';
            
            document.body.appendChild(heart);
            
            // Animate heart
            setTimeout(() => {
                heart.style.opacity = '1';
                heart.style.transform = 'translateY(-50px)';
            }, 10);
            
            // Remove heart after animation
            setTimeout(() => {
                heart.remove();
            }, 1500);
        }
        
        // Initialize effects
        window.onload = createBackgroundEffects;
    </script>
</body>
